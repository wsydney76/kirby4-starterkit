{% extends "@templates/layouts/main.twig" %}


{% block content %}

    {% include '@templates/partials/cover.twig' with {
    	image: page.cover
    } only %}

    <article class="max-w-xl mx-auto">

        {% include '@templates/partials/intro.twig' %}

        <div class="prose prose-lg">
            {% include '@templates/partials/blocks.twig' with {
            	blocks: page.text.toBlocks
            } only %}
        </div>

        <footer class="mt-12">
            {% if tags %}
                <ul class="mb-12 flex space-x-4">
                    {% for tag in tags %}
                        <li>
                            <a class="bg-gray-300 px-4 py-2 transition-colors hover:bg-black hover:text-white"
                               href="{{ page.parent().url({params : {tag: tag}}) }}">{{ tag }}</a>
                        </li>
                    {% endfor %}
                </ul>
            {% endif %}

            <time class="note-date" datetime="{{ page.date|date('c') }}">Published on {{ page.date|date }}
            </time>
        </footer>

        {% include '@templates/partials/prevnext.twig' %}


    </article>



{% endblock %}
