{% from '@templates/macros/lib.twig' import img %}

{% set caption = block.caption %}
{% set crop = block.crop.isTrue %}
{% set ratio = block.ratio.toString ?? '' %}


<figure>
    <div class="not-prose grid grid-cols-2 gap-4 md:grid-cols-3">
        {% for image in block.images.toFiles %}
            <div>
                <a href="{{ image.url }}" data-lightbox>
                    {{ img(image, {
                        transform: {width: 300, ratio}
                    }) }}
                </a>
            </div>
        {% endfor %}
    </div>
    {% if caption %}
        <figcaption>
            {{ caption }}
        </figcaption>
    {% endif %}
</figure>
